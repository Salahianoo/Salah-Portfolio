<%- include("partials/header.ejs") %>

<!-- Contact Form Styles -->
<link rel="stylesheet" href="/styles/contact-form.css">

<div class="contact-container">
  <div class="contact-header">
    <h1 class="contact-title">Get In Touch</h1>
    <p class="contact-subtitle">Let's discuss your next project or collaboration opportunity!</p>
  </div>

  <div class="contact-content">
    <div class="contact-info">
      <div class="contact-card">
        <div class="contact-icon">📍</div>
        <h3>Location</h3>
        <p>Amman, Jordan</p>
      </div>
      
      <div class="contact-card">
        <div class="contact-icon">📧</div>
        <h3>Email</h3>
        <p>salahshadi2005@gmail.com</p>
      </div>
      
      <div class="contact-card">
        <div class="contact-icon">📱</div>
        <h3>Let's Connect</h3>
        <div class="social-links">
          <a href="https://www.linkedin.com/in/salah-abushamseih-aa1864305/" target="_blank">LinkedIn</a>
          <a href="https://github.com/Salahianoo" target="_blank">GitHub</a>
        </div>
      </div>
    </div>

    <div class="contact-form-container">
      <form id="contactForm" class="contact-form">
        <div class="form-group">
          <label for="from_name">Your Name</label>
          <input type="text" id="from_name" name="from_name" required>
          <span class="form-icon">👤</span>
        </div>
        
        <div class="form-group">
          <label for="from_email">Your Email</label>
          <input type="email" id="from_email" name="from_email" required>
          <span class="form-icon">📧</span>
        </div>
        
        <div class="form-group">
          <label for="subject">Subject</label>
          <input type="text" id="subject" name="subject" required>
          <span class="form-icon">📝</span>
        </div>
        
        <div class="form-group">
          <label for="message">Your Message</label>
          <textarea id="message" name="message" rows="6" required placeholder="Tell me about your project..."></textarea>
          <span class="form-icon">💬</span>
        </div>
        
        <button type="submit" class="submit-btn">
          <span class="btn-text">Send Message</span>
          <span class="btn-icon">🚀</span>
          <div class="btn-loading" style="display: none;">
            <div class="spinner"></div>
            Sending...
          </div>
        </button>
      </form>
      
      <!-- Success/Error Messages -->
      <div id="success-message" class="message success-msg" style="display: none;">
        <div class="message-icon">✅</div>
        <div class="message-text">
          <h3>Message Sent Successfully!</h3>
          <p>Thank you for reaching out. I'll get back to you soon!</p>
        </div>
      </div>
      
      <div id="error-message" class="message error-msg" style="display: none;">
        <div class="message-icon">❌</div>
        <div class="message-text">
          <h3>Oops! Something went wrong</h3>
          <p>Please try again or contact me directly via email.</p>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- EmailJS Script -->
<script src="https://cdn.jsdelivr.net/npm/@emailjs/browser@3/dist/email.min.js"></script>
<script src="/JS/contact-form.js"></script>

